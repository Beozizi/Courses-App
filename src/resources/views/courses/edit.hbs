<div class="courses-edit">
    <h3>Edit A Course</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên video</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Miêu tả video</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}"</textarea>
        </div>
        <div class="form-group">
            <label for="level">Nguồn của video</label>
            <input type="text" class="form-control" value="{{course.copyright}}" id="copyright" name="copyright">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>